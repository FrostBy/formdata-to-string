{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",

    // The bulk of this library is code taken from `undici` internals so we aren't going to bother
    // trying to type everything, instead opting for handling that in unit test coverage.
    "noImplicitAny": false,

    "outDir": "dist/",
  },
  "include": ["./src/**/*"]
}
